<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_dark"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="32dp">

        <!-- App Icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›¡ï¸"
            android:textSize="64sp"
            android:layout_marginBottom="16dp"/>

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EpiGuard"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Epilepsy Screen Protection"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:layout_marginBottom="32dp"/>

        <!-- Status Card -->
        <LinearLayout
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_background"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROTECTION STATUS"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:letterSpacing="0.15"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvStatusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â— Inactive"
                android:textColor="@color/status_inactive"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Start Button -->
        <Button
            android:id="@+id/btnStartPrediction"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Start Protection"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/btn_primary"
            android:layout_marginBottom="12dp"/>

        <!-- Stop Button -->
        <Button
            android:id="@+id/btnStopPrediction"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Stop Protection"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/btn_secondary"
            android:layout_marginBottom="32dp"/>

        <!-- Feature Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Feature 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ‘ï¸"
                    android:textSize="24sp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Real-time Detection"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monitors screen for rapid flashing"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Feature 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="âš¡"
                    android:textSize="24sp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instant Blocking"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blocks harmful content immediately"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Feature 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ“ž"
                    android:textSize="24sp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Assist"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick call for help when needed"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Test Overlay -->
        <Button
            android:id="@+id/btnTestOverlay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Test Warning Overlay"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="@drawable/btn_outline"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>